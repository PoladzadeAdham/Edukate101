@model CourseCreateVM

<form method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label for="Title"></label>
        <input asp-for="Title" class="form-control" placeholder="Enter Title">
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Image"></label>
        <input asp-for="Image" class="form-control" placeholder="Enter Image">
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label for="Rating"></label>
        <input asp-for="Rating" class="form-control" placeholder="Enter Rating">
        <span asp-validation-for="Rating" class="text-danger"></span>
    </div>



    <button type="submit" class="btn btn-primary">Submit</button>
</form>